#!/usr/bin/env bash
if command -v pwsh >/dev/null 2>&1; then
  pwsh -NoProfile -ExecutionPolicy Bypass -File "./scripts/p14_continuous_release_guard.ps1"
else
  powershell.exe -NoProfile -ExecutionPolicy Bypass -File "./scripts/p14_continuous_release_guard.ps1"
fi
rc=$?
if [ $rc -ne 0 ]; then
  echo "Pre-push blocked by P14 release guard."
  exit $rc
fi
exit 0